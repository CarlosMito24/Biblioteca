@model Biblioteca.Modelos.VariablesLibro
@{
    ViewData["Title"] = "Detalles del libro";
}
<br>
<h3 class="text-center">Detalles del libro: @Html.DisplayFor(model => model.Nombre)</h3>
<br>

<table>
    <tr>
        <td>
            <b>
                Nombre del libro:
            </b>
        </td>
        <td>
            <b>
                Autor del libro:
            </b>
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.Nombre)
        </td>
        <td>
            @Html.DisplayFor(model => model.Autor)
        </td>
    </tr>
</table>

<br>

<a asp-action="RegistroDeLibros" class="btn btn-primary">Volver al registro de libros </a>