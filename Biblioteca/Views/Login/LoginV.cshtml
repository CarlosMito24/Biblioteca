@model LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1>Iniciar sesión: </h1>

<br>

<form asp-action="LoginV">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label">Correo:</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <br>

    <div class="form-group">
        <label class="control-label"> Contraseña: </label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <br>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
        <label class="form-check-label" asp-for="Recuerdame"></label>
    </div>

    <br>

    <button class="btn btn-primary">Iniciar Sesión</button>
    <a class="btn btn-success" asp-action="Registro">Crear nueva cuenta</a>

</form>

